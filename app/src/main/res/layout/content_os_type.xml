<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".os_type.OsTypeActivity"
    tools:showIn="@layout/activity_os_type">

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/valenet_logo" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_mercantil"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_logo"
        android:text="Mercantil" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_assistencia_tecnica"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_mercantil"
        android:layout_marginTop="12dp"
        android:text="Assistência Técnica" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_sair"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:text="Sair" />
</RelativeLayout>