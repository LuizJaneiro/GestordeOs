<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_marker_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_google">

        <TextView

            android:id="@+id/info_marker_name"
            fontPath="fonts/Lato-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="20"
            android:maxLines="1"
            android:text="Maria Tereza"
            android:textColor="@color/text_color_os_item"
            android:textSize="20sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/info_marker_os_type_and_date"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/info_marker_name"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxEms="2"
            android:maxLines="2"
            android:minEms="2"
            android:paddingLeft="16dp"
            android:text="Corretiva FÃ­sica 03/07/2018 - 15:10"
            android:textColor="@color/text_color_os_item" />

        <TextView
            android:id="@+id/info_marker_text_view_os_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_marker_os_type_and_date"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Rua itacolomi, 1032, Saramenha, Apartamento 01"
            android:textColor="@color/text_color_os_item" />

        <TextView
            android:id="@+id/info_marker_distance"
            fontPath="fonts/Lato-Bold.ttf"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/info_marker_name"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:paddingRight="16dp"
            android:text="2.1 KM"
            android:textColor="@color/text_color_os_item"
            android:textSize="16sp"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@+id/info_marker_image_view_status_os"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/info_marker_distance"
            android:layout_marginEnd="38dp"
            android:src="@drawable/ic_awaiting_os" />

    </RelativeLayout>
</RelativeLayout>