<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleColor="@color/colorPrimaryDark">

            <RelativeLayout
                android:id="@+id/os_item_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp">

                    <RelativeLayout
                        android:id="@+id/content_os_details"
                        android:layout_width="80dp"
                        android:layout_height="96dp"
                        android:gravity="center_horizontal"
                        android:minHeight="120dp">

                        <TextView
                            android:id="@+id/os_text"
                            fontPath="fonts/Lato-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="OS"
                            android:textColor="@color/text_color_os_item"
                            android:textSize="20sp"
                            tools:ignore="MissingPrefix" />

                        <TextView
                            android:id="@+id/text_view_os_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/os_text"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="345264"
                            android:textColor="@color/text_color_os_item"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/image_view_status_os"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/text_view_distance_toolbar"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:src="@drawable/ic_awaiting_os" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/content_os_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/content_os_details"
                        android:background="@drawable/dashed_line"
                        android:minHeight="96dp"
                        android:paddingLeft="16dp">

                        <RelativeLayout
                            android:id="@+id/content_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/text_view_client_name_toolbar"
                                fontPath="fonts/Lato-Bold.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Maria Tereza"
                                android:textColor="@color/text_color_os_item"
                                android:textSize="20sp"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/text_view_os_type_toolbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_view_client_name_toolbar"
                                android:maxLines="1"
                                android:text="Corretiva FÃ­sica"
                                android:textColor="@color/text_color_os_item"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/text_view_os_date_toolbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_view_os_type_toolbar"
                                android:text="03/07/2018"
                                android:textColor="@color/text_color_os_item"
                                android:textSize="15sp" />


                            <TextView
                                android:id="@+id/text_view_os_city_toolbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text_view_os_date_toolbar"
                                android:layout_marginTop="4dp"
                                android:text="Ouro Preto"
                                android:textColor="@color/text_color_os_item"
                                android:textSize="15sp" />

                        </RelativeLayout>


                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>