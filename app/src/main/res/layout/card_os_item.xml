<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/os_item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/content_os_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="18dp"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="18dp">

                <RelativeLayout
                    android:id="@+id/content_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/right_layout">

                    <TextView
                        android:id="@+id/text_view_client_name_toolbar"
                        fontPath="fonts/Lato-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Maria Tereza"
                        android:textColor="@color/text_color_os_item"
                        android:textSize="20sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/text_view_os_type_toolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_view_client_name_toolbar"
                        android:maxLines="1"
                        android:text="Corretiva FÃ­sica"
                        android:textColor="@color/text_color_os_item"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_view_os_date_toolbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_view_os_type_toolbar"
                        android:text="03/07/2018"
                        android:textColor="@color/text_color_os_item"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/right_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/text_view_distance_toolbar"
                        fontPath="fonts/Lato-Bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="2 Km"
                        android:textColor="@color/text_color_os_item"
                        android:textSize="20sp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/image_view_status_os"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_view_distance_toolbar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_awaiting_os" />

                </RelativeLayout>

            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/content_os_view"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/line_os_item" />

        </RelativeLayout>

    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.v7.widget.CardView>