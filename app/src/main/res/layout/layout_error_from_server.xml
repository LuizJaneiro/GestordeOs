<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_error_server"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="gone">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_error"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie/error_server.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/text_view_error_from_server"
        fontPath="fonts/Lato-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottie_animation_error"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Ocorreu um problema no carregamento\n da lista de OS!"
        android:textColor="@color/text_color_os_item"
        android:textSize="16sp"
        tools:ignore="MissingPrefix" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_try_again_server_error"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_error_internet_connection"
        android:text="Tentar Novamente" />

</RelativeLayout>